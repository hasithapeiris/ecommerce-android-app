<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailToolbar"
        app:srcCompat="@drawable/baseline_notifications_24" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reset_password4"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/custom_button"
        android:text="Deactivative"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detailToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/detailActualToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="User Profile" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/user_id"
        android:layout_width="323dp"
        android:layout_height="47dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/custom_image_background"
        android:padding="10dp"
        android:text="User ID"
        app:layout_constraintEnd_toEndOf="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/detailToolbar" />

    <TextView
        android:id="@+id/user_role"
        android:layout_width="323dp"
        android:layout_height="47dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_image_background"
        android:padding="10dp"
        android:text="User Role"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_email" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="4dp"
        android:text="ID"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toStartOf="@+id/user_id"
        app:layout_constraintTop_toBottomOf="@+id/detailToolbar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/user_id" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="323dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_image_background"
        android:padding="10dp"
        android:text="User Email"
        app:layout_constraintEnd_toEndOf="@+id/user_role"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="323dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_image_background"
        android:padding="10dp"
        android:text="User Name"
        app:layout_constraintEnd_toEndOf="@+id/user_email"
        app:layout_constraintTop_toBottomOf="@+id/user_id" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart=""
        android:text="Role"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/user_email" />

    <Button
        android:id="@+id/changepassbutton"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:text="change password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_role" />

    <Button
        android:id="@+id/button2"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="16dp"
        android:text="update details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_role" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bnv"
        android:elevation="10dp"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bnv_items" />

</androidx.constraintlayout.widget.ConstraintLayout>
