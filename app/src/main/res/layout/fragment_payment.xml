<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PaymentFragment"
    android:padding="16dp">

    <!-- Payment Heading -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/paymentToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/paymentActualToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="Payment"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            app:titleCentered="true"
            />

    </androidx.appcompat.widget.Toolbar>

    <!-- Card Payment Section -->
    <TextView
        android:id="@+id/card_payment_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipping Address"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/paymentToolbar"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/card_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Shipping Address"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/custom_image_background"
        app:layout_constraintTop_toBottomOf="@id/card_payment_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- PayPal Option -->
    <TextView
        android:id="@+id/paypal_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or Pay with PayPal"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/card_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/pay_with_paypal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pay with PayPal"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/paypal_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Payment Button -->
    <Button
        android:id="@+id/payment_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Make Payment"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/pay_with_paypal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>