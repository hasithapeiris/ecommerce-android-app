<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PaymentFragment"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/cancelOrderToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/cancelOrderActualToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="Cancel Order"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            app:titleCentered="true"
            />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/card_payment_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason for cancellation of order"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/cancelOrderToolbar"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Reason?"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/custom_image_background"
        app:layout_constraintTop_toBottomOf="@id/card_payment_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"/>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel Order"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/reason"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>