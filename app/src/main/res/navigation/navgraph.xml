<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/signUpFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.ecommerceapp.fragments.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_mainFragment2"
            app:destination="@id/mainFragment2" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.ecommerceapp.fragments.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_mainFragment2"
            app:destination="@id/mainFragment2" />
        <action
            android:id="@+id/action_signInFragment_to_forgotPassword"
            app:destination="@id/forgotPassword" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment2"
        android:name="com.example.ecommerceapp.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment2_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_mainFragment2_to_likeFragment2"
            app:destination="@id/likeFragment2" />
        <action
            android:id="@+id/action_mainFragment2_to_cartFragment2"
            app:destination="@id/cartFragment2" />
        <action
            android:id="@+id/action_mainFragment2_to_userprofile"
            app:destination="@id/userprofile" />
        <action
            android:id="@+id/action_mainFragment2_to_userprofile2"
            app:destination="@id/userprofile" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.ecommerceapp.fragments.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_detailsFragment_to_cartFragment2"
            app:destination="@id/cartFragment2" />
        <argument
            android:name="productId"
            app:argType="string"
            android:defaultValue="null" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment2"
        android:name="com.example.ecommerceapp.fragments.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/likeFragment2"
        android:name="com.example.ecommerceapp.fragments.LikeFragment"
        android:label="fragment_like"
        tools:layout="@layout/fragment_like" >
        <action
            android:id="@+id/action_likeFragment2_to_mainFragment2"
            app:destination="@id/mainFragment2" />
    </fragment>
    <fragment
        android:id="@+id/userprofile"
        android:name="com.example.ecommerceapp.fragments.Userprofile"
        android:label="fragment_userprofile"
        tools:layout="@layout/fragment_userprofile" >
        <action
            android:id="@+id/action_userprofile_to_changepassword"
            app:destination="@id/changepassword" />
        <action
            android:id="@+id/action_userprofile_to_profileUpdate"
            app:destination="@id/profileUpdate" />
    </fragment>
    <fragment
        android:id="@+id/changepassword"
        android:name="com.example.ecommerceapp.fragments.ResetPassword"
        android:label="fragment_changepassword"
        tools:layout="@layout/fragment_resetpassword" />
    <fragment
        android:id="@+id/forgotPassword"
        android:name="com.example.ecommerceapp.fragments.ForgotPassword"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />
    <fragment
        android:id="@+id/profileUpdate"
        android:name="com.example.ecommerceapp.fragments.ProfileUpdate"
        android:label="fragment_profile_update"
        tools:layout="@layout/fragment_profile_update" />
</navigation>